<main>
    <section>
        <div class="card">
            <div class="card-body">
                <div class="row display-6">
                    <div class="col-6 ">Yakiv Varenyk</div>
                    <div class="col-6 text-end">Resume project</div>
                </div>
            </div>
        </div>
    </section>

    <section>
        <div class="mb-3" style="font-size: larger;">
            <h1>Pages list</h1>
            <div>This is my educational project with course from IT Brains</div>
            <div>Using technology: <i class="fa-brands fa-html5"></i> HTML5, <img width="30px"
                    src="/svg/handlebars.svg">Handlebars,
                <i class="bi bi-bootstrap-fill"></i>
                Bootstrap
            </div>
        </div>
        <div class="row">
            <div class="col-6 mb-5">
                <h2>Shop:</h2>
                <div class="row">
                    {{#each shopPages}}
                    <div class="col-6 mb-2">
                        <a href={{link}} class="btn btn-success text-capitalize">{{name}}</a>
                    </div>
                    {{/each}}
                </div>
            </div>
            <div class="col-6 "></div>
            <div class="col-6">
                <h2>Other:</h2>
                <div class="row">
                    {{#each otherPages}}
                    <div class="mb-2 col-4">
                        <a href={{link}} class="btn btn-primary text-capitalize">{{name}}</a>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>

    </section>
</main>