<main>
    <h1>{{header}}</h1>

    <section>

        {{#with purchase}}

        <div class="nav nav-tabs ">
            {{#each tabs}}
            <div class="nav-item">
                <button {{#if @first}} class="btn btn-link nav-link active" {{else}} class="btn btn-link nav-link"
                    {{/if}}>{{this}}</button>
            </div>
            {{/each}}
        </div>

        {{#with actionBlock}}
        <div class="row my-4">
            <div class="col-4">
                <input placeholder={{input.placeholder}} class="form-control">
            </div>
            <div class="col-8">
                {{#each buttons}}
                <a href={{link}} {{#if isSuccess}} class="btn btn-success" {{/if}} {{#if isOutline}}
                    class="btn btn-outline-success" {{/if}} {{#if isDanger}} class="btn btn-outline-danger"
                    {{/if}}>{{text}}</a>
                {{/each}}
            </div>
        </div>
        {{/with}}

        <hr>

        <div class="my-4">
            {{#each itemList}}
            {{> purchaseItem}}
            {{/each}}
        </div>

        {{/with}}
    </section>

    <hr>

    {{#with userInfo}}
    <section class="row g-3">
        <h2>{{title}}</h2>

        <div class="card">
            <div class="card-body">

                {{#with profileData}}
                <h3>{{title}}</h3>

                <div class="row g-4">

                    {{#each fullName}}
                    {{> shopprofileContact}}
                    {{/each}}

                    {{#each otherInfo}}
                    {{> shopprofileContact}}
                    {{/each}}

                    {{/with}}

                    {{#each buttons}}
                    {{> shopprofileButton}}
                    {{/each}}
                </div>

            </div>
        </div>

        {{#with recipients}}
        <div class="card">
            <div class="card-body">
                <h3>{{title}}</h3>
                <div class="row">
                    {{#each users}}
                    <div class="col-4">
                        <div class="row g-3">
                            <div class="mt-4">
                                <b>{{name}}</b>
                                <div>{{phone}}</div>
                            </div>
                            <div>
                                {{#with button}} <a href={{link}} class="btn btn-primary">{{text}}</a> {{/with}}
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
        {{/with}}

        {{#with contacts}}
        <div class="card">
            <div class="card-body">
                <h3>{{title}}</h3>
                <div class="row g-3">
                    {{#each contactData}}
                    {{> shopprofileContact}}
                    {{/each}}

                    {{#each buttons}}
                    {{> shopprofileButton}}
                    {{/each}}
                </div>
            </div>
        </div>
        {{/with}}

    </section>
    {{/with}}

    <hr>
</main>