<main class="mt-5">

    {{#with formBlock}}
    <section class="row mb-0">
        <div class="col-8">
            <h1>{{header}}</h1>

            <div class="my-3">
                {{#with rating}}
                <span>{{title}}: {{value}}</span>
                {{/with}}
            </div>

            {{#with actionBlock}}
            <div class="nav nav-tabs mb-5">
                {{#each tabs}}
                <div class="nav-item">
                    <button {{#if isActive}} class="btn btn-link nav-link active" {{else}} class="btn btn-link nav-link"
                        {{/if}}>{{text}}</button>
                </div>
                {{/each}}
            </div>

            <hr>

            {{#with field}}
            <div class="card my-5">
                <div class="card-body">
                    <div class="row">
                        <div class="col-7">
                            <input class="form-control" placeholder="{{placeholder}}">
                        </div>
                        <div class="col-5 text-end">
                            {{#with button}}
                            <a class="btn btn-secondary">{{text}}</a>
                            {{/with}}
                        </div>
                    </div>
                </div>
            </div>
            {{/with}}

            {{/with}}

            <hr>

            {{#with feedbackBlock}}
            <div class="mb-3">
                <h3 class="my-5">{{title}}</h3>
                <div>
                    {{#each buttons}}
                    <a href={{link}} {{#if isWarning}} class="btn btn-warning text-light me-2" {{/if}} {{#if isSuccess}}
                        class="btn btn-success me-2" {{/if}} {{#if isDanger}} class="btn btn-danger me-2"
                        {{/if}}>{{text}}</a>
                    {{/each}}
                </div>
            </div>
            {{/with}}

        </div>

        {{#with goodsInfo}}
        <div class="col-4">
            <div class="row g-3">
                <div class="card">
                    <div class="card-body">
                        <img alt="" src={{photo}}>
                        <div class="mt-3">
                            <b>{{name}}</b>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-body">
                        <div class="row g-3">
                            <div>
                                <b>{{price}}</b>
                                <div>Є в наявності</div>
                            </div>
                            <div>
                                {{#each buttons}}
                                <div class="mb-2">
                                    <a href={{link}} {{#if isPrimary}} class="btn btn-primary" {{/if}} {{#if
                                        isSecondary}} class="btn btn-secondary" {{/if}}>{{text}}</a>
                                </div>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>

                {{#with seller}}
                <div class="card">
                    <div class="card-body">{{title}}: <b>{{value}}</b>
                    </div>
                </div>
                {{/with}}
            </div>
        </div>
        {{/with}}
    </section>
    {{/with}}

    <hr>

    <section class="mt-4">
        {{#each reviewList}}
        {{> reviewItem}}
        {{/each}}

    </section>

    {{> shopaction}}

    <hr>
</main>