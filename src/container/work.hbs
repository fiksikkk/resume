<div>
	{{#with main}}
	<main>
		<section>
			{{> title data='Work history' big=true}}
			<div>
				<ul>
					{{#each works}}
					<li>
						<div>{{position}}</div>

						<br>

						<div>{{duration.from}} -
							{{#if duration.to}} {{duration.to}}
							{{else}} (досі працюю)
							{{/if}}


						</div>

						<br>
						<div>
							{{#if company.url}}
							{{> link href=company.url text=company.name blank=true noLine=true}}
							{{else}}
							<b>{{company.name}}</b>
							{{/if}}
						</div>
						<br>
						<br>

						<div>
							<strong>
								Projects ({{projectAmount}})
							</strong>
						</div>

						<br>

						<ul>
							{{#each projects}}
							<li>
								<div>{{> link href=url text=name blank=true noLine=true}}</div>
								<br>

								<div>
									<p>{{about}}</p>
								</div>
								<br>

								<div>
									<em>Project stacks ({{stackAmount}})</em>
								</div>
								<br>

								<div>
									<ul>
										{{#each stacks}}
										<li>{{name}}</li>
										{{/each}}
									</ul>
								</div>
								<br>

								<div>
									<em>Project awards ({{awardsAmount}})</em>
								</div>
								<br>

								<div>
									<ul>
										{{#each awards}}
										<li>{{name}}</li>
										{{/each}}
									</ul>
								</div>

							</li>
							{{/each}}
						</ul>
					</li>
					<br>
					{{/each}}
				</ul>
			</div>
		</section>
	</main>
	{{/with}}
</div>